# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vibeverse
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vibeverse

# Redis Cache (Optional)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# TMDB API
TMDB_API_KEY=your_tmdb_api_key_here

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Zoho Cliq Bot
ENABLE_CLIQ_BOT=true
CLIQ_WEBHOOK_SECRET=your_cliq_webhook_secret

# Zoho SalesIQ Bot
ENABLE_SALESIQ_BOT=true

# Zoho CRM Integration
ZOHO_CRM_ACCESS_TOKEN=your_crm_access_token
ZOHO_CRM_REFRESH_TOKEN=your_crm_refresh_token
ZOHO_CRM_CLIENT_ID=your_crm_client_id
ZOHO_CRM_CLIENT_SECRET=your_crm_client_secret
ZOHO_CRM_API_DOMAIN=https://www.zohoapis.com

# Scheduler Settings
ENABLE_SCHEDULER=true
ENABLE_AUTO_CRM_SYNC=true

# Webhook URLs (Replace with your actual URLs)
WEBHOOK_URL=https://your-server.com/api
